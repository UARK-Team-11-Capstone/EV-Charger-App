<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EV_Charger_App.Views.UserSettings"
             Title="Settings">

    <TableView Intent="Settings" >
        <TableRoot>
            <TableSection Title="Your Profile" TextColor="Blue" >
                <EntryCell Label="Name" Placeholder="John Doe" />
                <EntryCell Label="Email" Placeholder="jdoe@uark.edu"/>
                <EntryCell Label="Vehicle Type" Placeholder="BMW"/>

                <ViewCell x:Name="Password" Tapped="ChangePasswordTapped">
                    <StackLayout >
                        <Label Text="    Change Passord" VerticalOptions="CenterAndExpand" FontSize="Body"/>
                    </StackLayout>
                </ViewCell>

                <ViewCell>
                    <StackLayout  >

                        <BoxView HeightRequest="20" />
                    </StackLayout>
                </ViewCell>

                <ViewCell>
                    <StackLayout  >
                        <Button Clicked="SaveSettings" Text="Save" CornerRadius="10" />
                    </StackLayout>
                </ViewCell>
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>