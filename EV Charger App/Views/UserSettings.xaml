<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EV_Charger_App.Views.UserSettings"
             Title="Settings">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="menubar1.png" Clicked="ListClicked"/>
    </ContentPage.ToolbarItems>
    <StackLayout>
        <TableView Intent="Settings" >
            <TableRoot>
                <TableSection>
                    <EntryCell Label="Name" Placeholder="John Doe" />
                    <EntryCell Label="Email" Placeholder="jdoe@uark.edu"/>
                    <EntryCell Label="Vehicle Type" Placeholder="Bolt"/>

                    <ViewCell x:Name="Password" Tapped="ChangePasswordTapped">
                        <StackLayout >
                            <Label Text="    Change Password" VerticalOptions="CenterAndExpand" FontSize="Body"/>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
        <Button Clicked="SaveSettings" Text="Save" HorizontalOptions="CenterAndExpand" CornerRadius="10" HeightRequest="50" WidthRequest="300"/>
        <BoxView HeightRequest="30" />
    </StackLayout>
    
</ContentPage>