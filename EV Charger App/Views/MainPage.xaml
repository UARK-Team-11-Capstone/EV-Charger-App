<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EV_Charger_App.MainPage">

    <ContentPage.Content>
        <StackLayout x:Name="layoutContainer">
            <Label x:Name="lblInfo"  Margin="5"/>
            <ContentView x:Name="ContentMap" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
            <Entry x:Name="searchBar" Placeholder="SEARCH" HorizontalOptions="FillAndExpand" Margin="0, 0, 0, 0" Background="transparent"></Entry>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>