<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EV_Charger_App.Views.ChangePassword"
             BackgroundColor="#F0F3F5"
             Title="Reset Password">

    <StackLayout Margin="20">
        <Label Text="Current Password" />
        <Entry x:Name="currentPassword" IsPassword="True" WidthRequest="300"/>

        <Label Text="New Password" />
        <Entry x:Name="newPassword1" IsPassword="True" WidthRequest="300"/>

        <Label Text="Confirm New Password" />
        <Entry x:Name="newPassword2" IsPassword="True" WidthRequest="300"/>

        <!-- Using BoxView to put the button on the bottom of the page. -->
        <BoxView HeightRequest="330" />

        <Button Clicked="SavePassword" Text="Update Password" BackgroundColor="#0072CE" CornerRadius="10" HorizontalOptions="CenterAndExpand" HeightRequest="50" WidthRequest="300" />

    </StackLayout>
</ContentPage>