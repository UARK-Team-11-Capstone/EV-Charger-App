<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EV_Charger_App.Views.ChangePassword">
    
    <StackLayout Margin="20">
        <Label Text="Reset Password" FontAttributes="Bold" FontSize="Large" />

        <Label Text="Current Password" />
        <Entry IsPassword="True" WidthRequest="300"/>

        <Label Text="New Password" />
        <Entry IsPassword="True" WidthRequest="300"/>

        <Label Text="Confirm New Password" />
        <Entry IsPassword="True" WidthRequest="300"/>

        <!-- Using BoxView to put the button on the bottom of the page. -->
        <BoxView HeightRequest="300" />

        <Button Clicked="SavePassword" Text="Update Password" CornerRadius="10" HorizontalOptions="CenterAndExpand" HeightRequest="50" WidthRequest="300" />

    </StackLayout>
</ContentPage>